<% if line_item == @current_item %>
<tr id="current_item">
	<% else %>
<tr>
	<% end %>
<td><%= line_item.quantity %>&times;</td>
<td><%= line_item.product.title %></td>
<td><%= number_to_currency(line_item.total_price)%></td>
<td><%= link_to image_tag("increment.png", :border => 0, :height => 25, :width => 25), increase_line_item_path(line_item), :method => :put, remote: true %></td>
<td><%= link_to image_tag("decrement.png", :border => 0, :height => 25, :width => 25), decrease_line_item_path(line_item), :method => :put, remote: true %></td>

</tr>